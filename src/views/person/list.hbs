<div class="container">
  <div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de usuários</h3>
    {{#if person}}
        <table class="table text-center">
          <thead>
            <tr class="table-dark">
              <th scope="col" class="col-4">Nome</th>
              <th scope="col">Sobrenome</th>
              <th scope="col">Idade</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            {{#each person}}
              <tr>
                <td>{{name}}</td>
                <td>{{lastname}}</td>
                <td>{{age}}</td>
                <td>
                  <div class="btn group">
                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                    <i class="fa-solid fa-pencil"></i><a>
                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                    <i class="fa-solid fa-trash"></i></a>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr class="table-dark">
              <td colspan="4">REGISTRO DE USUÁRIOS</td>
            </tr>
          </tfoot>
        </table>
      </div>
    {{else}}
      <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
          <h3>Crie um usuário aqui!</h3>
        </div>
        <div class="card-body">
          <p>Pressione Aqui para criar um Usuário</p>
          <a href="#" class="btn btn-primary">Ir para Criar</a>
        </div>
    {{/if}}
  </div>
</div>